{
  "name": "overpower-deckbuilder",
  "version": "1.0.0",
  "description": "A deckbuilding application for the Overpower card game",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --config jest.unit.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:unit:watch": "jest --config jest.unit.config.js --watch",
    "test:unit:coverage": "jest --config jest.unit.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --config jest.unit.config.js --watch",
    "test:coverage": "jest --config jest.unit.config.js --coverage",
    "clear:database": "ts-node src/scripts/clearDatabase.ts",
    "load:characters": "ts-node src/scripts/loadCharacters.ts",
    "load:specials": "ts-node src/scripts/loadSpecialCards.ts",
    "load:powercards": "ts-node src/scripts/loadPowerCards.ts",
    "generate:images": "ts-node src/scripts/generateCardImages.ts",
    "generate:special-images": "ts-node src/scripts/generateSpecialCardImages.ts",
    "generate:power-images": "ts-node src/scripts/generatePowerCardImages.ts",
    "migrate": "ts-node src/scripts/flywayRunner.ts",
    "migrate:info": "ts-node src/scripts/flywayRunner.ts info",
    "migrate:validate": "ts-node src/scripts/flywayRunner.ts validate",
    "migrate:repair": "ts-node src/scripts/flywayRunner.ts repair",
    "migrate:data": "ts-node src/scripts/migrateCardData.ts",
    "generate:sql-migrations": "ts-node src/scripts/generateSqlDataMigrations.ts",
    "start:full": "./scripts/start-server.sh"
  },
  "keywords": [
    "overpower",
    "card-game",
    "deckbuilder",
    "typescript",
    "node"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-localstorage-mock": "^2.4.26",
    "jest-mock-extended": "^4.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
